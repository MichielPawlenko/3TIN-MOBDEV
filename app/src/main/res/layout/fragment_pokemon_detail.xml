<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PokemonDetailFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pokemonImage"
                    android:layout_width="128dp"
                    android:layout_height="128dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pokemonNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/pokemonPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:textColor="@color/priceColor"
                        android:textSize="24dp" />

                    <Button
                        android:id="@+id/addToCartButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onAddToCart"
                        android:text="@string/addToCart"
                        android:textSize="20dp"
                        android:theme="@style/Theme.MaterialButton"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/pokemonType"
                style="@style/pokemonDetailTextView" />

            <TextView
                android:id="@+id/pokemonAbilities"
                style="@style/pokemonDetailTextView" />

            <TextView
                android:id="@+id/pokemonHeight"
                style="@style/pokemonDetailTextView" />

            <TextView
                android:id="@+id/pokemonWeight"
                style="@style/pokemonDetailTextView" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>